#include <stdio.h>
#include <stdlib.h>

int main()
{
   char s1[5];
   char s2[5];
   char s3[5];
   int sayi1,sayi2,sayi3;
   printf("Birinci sayiyi giriniz");
   fgets(s1,5,stdin);
   sayi1=atof(s1);
   printf("İkinci sayiyi giriniz");
   fgets(s2,5,stdin);
   sayi2=atof(s2);
   printf("Ucunucu sayiyi giriniz ");
   fgets(s3,5,stdin);
   sayi3=atof(s3);
   if (sayi1>sayi2)
   {
       if (sayi1>sayi3)
       {
           printf("En Buyuk Sayi=%d",sayi1);
       }
       else
        printf("En Buyuk Sayi=%d",sayi3);
   }
   else if  (sayi2>sayi3)
   {
       printf("En Buyuk Sayi=%d",sayi2);
   }
    else
    {
        printf("En Buyuk Sayi=%d",sayi3);
    }
    printf("\n----------------------------\n");
    if (sayi1<sayi3)
    {
        if (sayi1<sayi2)
        {
            printf("En kücük Sayi=%d",sayi1);
        }
        else
            printf("En Küçük sayi=%d",sayi2);
    }
    else if (sayi3<sayi2)
    {
        printf("En küçük sayi=%d",sayi3);
    }
    else
        printf("En küççük sayi=%d",sayi2);
    return 0;
}
